<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="20dp"
    android:id="@+id/worker_info">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TextView
        android:id="@+id/interim_prenom_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tv_first_name"
        android:textSize="20dp"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/interim_prenom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/interim_prenom_label"
        android:background="?attr/editTextBackground"
        android:hint="@string/et_first_name"
        android:importantForAutofill="no"
        android:minHeight="48dp" />

    <TextView
        android:id="@+id/interim_last_name_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tv_last_name"
        android:textSize="20dp"
        android:layout_below="@+id/interim_prenom"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/interim_last_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/interim_last_name_label"
        android:hint="@string/et_last_name"
        android:minHeight="48dp"
        android:importantForAutofill="no" />

    <TextView
        android:id="@+id/interim_birthday_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tv_birthday"
        android:textSize="20dp"
        android:layout_below="@+id/interim_last_name"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/interim_birthday"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/interim_birthday_label"
        android:hint="@string/et_birthday"
        android:minHeight="48dp"
        android:importantForAutofill="no" />

    <TextView
        android:id="@+id/interim_email_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tv_email"
        android:textSize="20dp"
        android:layout_below="@+id/interim_birthday"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/interim_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/interim_email_label"
        android:hint="@string/et_email"
        android:minHeight="48dp"
        android:importantForAutofill="no" />

    <TextView
        android:id="@+id/interim_phone_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tv_phone"
        android:textSize="20dp"
        android:layout_below="@+id/interim_email"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/interim_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/interim_phone_label"
        android:hint="@string/et_phone"
        android:importantForAutofill="no" />


    <Button
        android:id="@+id/interim_btn_cv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/interim_phone"
        android:text="@string/btn_show_cv" />

        <Button
            android:id="@+id/interim_btn_lm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/interim_btn_cv"
            android:layout_marginBottom="200dp"
            android:text="@string/button_show_lm" />
</RelativeLayout>
</ScrollView>