<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="20dp"
    android:id="@+id/worker_info">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TextView
        android:id="@+id/interim_prenom_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/first_name"
        android:textSize="20dp"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/interim_prenom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/interim_prenom_label"
        android:background="?attr/editTextBackground"
        android:importantForAutofill="no"
        android:minHeight="48dp" />

    <TextView
        android:id="@+id/interim_last_name_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/last_name"
        android:textSize="20dp"
        android:layout_below="@+id/interim_prenom"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/interim_last_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/interim_last_name_label"
        android:minHeight="48dp"
        android:importantForAutofill="no" />

    <TextView
        android:id="@+id/interim_birthday_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tv_birthday"
        android:textSize="20dp"
        android:layout_below="@+id/interim_last_name"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/interim_birthday"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/interim_birthday_label"
        android:minHeight="48dp"
        android:importantForAutofill="no" />

    <TextView
        android:id="@+id/interim_email_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tv_email"
        android:textSize="20dp"
        android:layout_below="@+id/interim_birthday"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/interim_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/interim_email_label"
        android:minHeight="48dp"
        android:importantForAutofill="no" />

    <TextView
        android:id="@+id/interim_phone_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tv_phone"
        android:textSize="20dp"
        android:layout_below="@+id/interim_email"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/interim_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/interim_phone_label"
        android:importantForAutofill="no" />

    <TextView
        android:id="@+id/interim_natinality_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tv_nationality"
        android:textSize="20dp"
        android:layout_below="@+id/interim_phone"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/interim_nationality"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/interim_natinality_label"
        android:importantForAutofill="no" />

    <TextView
        android:id="@+id/interim_ville_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tv_city"
        android:textSize="20dp"
        android:layout_below="@+id/interim_nationality"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/interim_ville"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/interim_ville_label"
        android:importantForAutofill="no" />


</RelativeLayout>
</ScrollView>